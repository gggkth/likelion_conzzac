
<head>
  <link rel="stylesheet" href="owlcarousel/owl.carousel.min.css">
  <link rel="stylesheet" href="owlcarousel/owl.theme.default.min.css">
  <script src="jquery.min.js"></script>
  <script src="owlcarousel/owl.carousel.min.js"></script>
</head>

<div class="container">
  <!--최신 동영상-->
  <div class="garo-item">
    <div class="container"><h3>최신 동영상</h3></div>
    <div class="row container">
      <% @title.each_with_index do |title, index| %>
        <div class="col">
          <div class="item">
            <a href="<%=@home_url%><%=title["href"]%>"><img src="<%= @thumnail[index]["src"] %>"></a>
          </div>
          <div class="item-info">
            <i class="fa fa-play-circle-o" aria-hidden="true" style="white"></i>
            <!--[동영상 제작자]-->
            <%= truncate(title["title"], length:15) %>
            <!--동영상 설명-->
            
            <!--좋아요버튼-->
            <!--보관함 버튼-->
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!--추천 동영상-->
  <div class="garo-item">
    <div class="container"><h3>추천 동영상</h3></div>
    <div class="row container">
      <% @title.each_with_index do |title, index| %>
        <div class="col">
          <div class="item">
            <a href="<%=@home_url%><%=title["href"]%>"><img src="<%= @thumnail[index]["src"] %>"></a>
          </div>
          
          <i class="fa fa-play-circle-o" aria-hidden="true" style="white"></i>
          <!--[동영상 제작자]-->
          <%= truncate(title["title"], length:15) %>
          <!--동영상 설명-->
          
          <!--좋아요버튼-->
          <!--보관함 버튼-->
        </div>
      <% end %>
    </div>
     
  </div>
</div>
<hr>

<div class="owl-carousel">
  <div>
    <!--<div class="carousel-item active">-->
    <!--  <img class="d-block img-fluid" src="..." alt="First slide">-->
    <!--</div>-->
    <!--<div class="carousel-item">-->
    <!--  <img class="d-block img-fluid" src="..." alt="Second slide">-->
    <!--</div>-->
    <% @title.each_with_index do |title, index| %>
      <div class="carousel-item active">
        <a href="<%=@home_url%><%=title["href"]%>"><img class="d-block img-fluid" src="<%= @thumnail[index]["src"] %>"></a>
      </div>
    <% end %>
    <!--<div class="carousel-item">-->
    <!--  <img class="d-block img-fluid" src="..." alt="Third slide">-->
    <!--</div>-->
  </div>
</div>

<!--마우스오버시-->
<!--재생버튼/타이틀/내용/좋아요/보관하기-->


<script>
  $('.owl-carousel').owlCarousel({
    loop:true, 
    margin:10, 
    responsiveClass:true, 
    responsive:{ 
    0:{ items:1, nav:true }, 
    600:{ items:3, nav:false }, 
    1000:{ items:5, nav:true, loop:false } 
    } 
  })
</script>