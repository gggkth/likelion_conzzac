    <div class="left-menu">
      <h5>Browse<i class="fa fa-caret-down"></i></h5>
      <h5>Kids</h5>
      <h5>DVD</h5>
    </div><!--left-menu end-->
    <div class="right-menu">
      <h5><i class="fa fa-search"></i>Search</h5>
      <div class="user">
        <img class="user-img" src="https://d3iw72m71ie81c.cloudfront.net/male-5.jpg"/>
