<div class="container " align="center">
  <div class="login py-3">
    <h4 class="mt-3">
      회원가입
    </h4>
    <p class="gray-color-font">
      welcome!
      <br>ㅡ
    </p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "ui large form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="px-4 pb-3 mt-2">
        <div class="field mt-3">
          <div class="fa fa-user d-inline-block p-1 login-fa" aria-hidden="true"></div>
          <%= f.email_field :email, placeholder: "User email", class:"login-field p-2" %>
        </div>
  
        <div class="field mt-2">
          <div class="fa fa-unlock-alt d-inline-block p-1 login-fa" aria-hidden="true"></div>
          <!--<% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 자 이상이어야 합니다.)</em>
          <% end %><br />-->
          <%= f.password_field :password, autocomplete: "off", :placeholder => '6자 이상이어야 합니다', class:"login-field p-2" %>
        </div>
  
        <div class="field  mt-2 mb-3">
          <div class="fa fa-lock d-inline-block p-1 login-fa" aria-hidden="true"></div>
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => '비밀번호 확인', :class => 'login-field p-2' %>
        </div>
      </div>  
      <div class="actions">
        <%= f.submit "Sign up", :class => 'login-button'%>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>