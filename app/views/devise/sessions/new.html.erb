<div class="container my" align="center">
  <div class="login py-3">
    <h4 class="mt-3">
      로그인
    </h4>
    ㅡ
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="px-4 pb-3">
        <div class="field mb-1 mt-3">
          <div class="fa fa-user d-inline-block p-1 login-fa" aria-hidden="true"></div>
          <%= f.email_field :email, autofocus: true, placeholder: "User email", class:"login-field p-2" %>
        </div>
      
        <div class="field mt-2 mb-3 ">
          <div class="fa fa-lock d-inline-block p-1 login-fa" aria-hidden="true"></div>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:"login-field p-2" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
      <div class="actions">
        <%= f.submit "Sign in", class:"login-button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>  